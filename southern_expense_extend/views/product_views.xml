<odoo>
  <record id="hr_expense_category_form_inherit_required_group" model="ir.ui.view">
    <field name="name">hr.expense.category.form.inherit.required.group</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="hr_expense.product_product_expense_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='categ_id']" position="after">
        <field name="required_group_id" groups="hr_expense.group_hr_expense_manager"/>
      </xpath>
    </field>
  </record>
</odoo>