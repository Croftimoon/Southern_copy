<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_send_message_wizard_form" model="ir.ui.view">
        <field name="name">send.message.wizard.form</field>
        <field name="model">send.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="message_type" invisible="1"/>
                            <span invisible="message_type != 'sale_to_warehouse'">
                                Send Message to Warehouse Team
                            </span>
                            <span invisible="message_type != 'warehouse_to_sale'">
                                Send Message to Sales Team
                            </span>
                        </h1>
                    </div>

                    <group>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="picking_id" readonly="1" invisible="picking_id == False"/>
                    </group>

                    <group>
                        <field name="recipient_ids" widget="many2many_tags"
                               placeholder="Optional: Add additional recipients"/>
                    </group>

                    <separator string="Message"/>
                    <field name="message" placeholder="Enter your message here..."
                           options="{'style-inline': true}"
                           style="min-height: 200px;"/>
                </sheet>

                <footer>
                    <button string="Send Message" name="send_message" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>