<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Form View Inheritance -->
    <record id="view_purchase_order_form_navision" model="ir.ui.view">
        <field name="name">purchase.order.form.navision</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_confirm" position="after">
                <button name="action_send_to_navision"
                        string="Send to SI"
                        type="object"
                        class="btn-primary"
                        invisible="state not in ('purchase', 'done')"/>
            </button>
        </field>
    </record>

    <!-- Navision Wizard Form View -->
    <record id="view_purchase_navision_wizard_form" model="ir.ui.view">
        <field name="name">purchase.navision.wizard.form</field>
        <field name="model">purchase.navision.wizard</field>
        <field name="arch" type="xml">
            <form string="Send to SI Navision">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="purchase_order_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="contact_ids" widget="many2many_tags"
                                   placeholder="Select contacts to send email to..."/>
                            <field name="subject"/>
                        </group>
                        <group>
                            <field name="attachment_name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Email Content">
                            <field name="body" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_send_email" string="Send Email" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Navision Wizard Action -->
    <record id="action_purchase_navision_wizard" model="ir.actions.act_window">
        <field name="name">Send to SI</field>
        <field name="res_model">purchase.navision.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>