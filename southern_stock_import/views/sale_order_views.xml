<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.spreadsheet</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_spreadsheet_import_wizard)d"
                        string="Import File"
                        type="action"
                        class="btn-secondary"
                        icon="fa-upload"
                        invisible="state in ['done', 'cancel']"
                        help="Import products from Excel or CSV file"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_consignment_form_inherit_sale" model="ir.ui.view">
        <field name="name">sale.order.consignment.form.inherit.spreadsheet</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="setu_customer_consignment.view_order_consignment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_spreadsheet_import_wizard)d"
                        string="Import File"
                        type="action"
                        class="btn-secondary"
                        icon="fa-upload"
                        invisible="state in ['done', 'cancel']"
                        help="Import products from Excel or CSV file"/>
            </xpath>
        </field>
    </record>
</odoo>