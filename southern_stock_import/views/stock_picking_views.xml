<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Transfer Views -->
    <record id="view_picking_form_inherit_stock" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.spreadsheet</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_spreadsheet_import_wizard)d"
                        string="Import File"
                        type="action"
                        class="btn-secondary"
                        icon="fa-upload"
                        invisible="state in ['done', 'cancel']"
                        help="Import products from Excel or CSV file"/>
            </xpath>
        </field>
    </record>
</odoo>