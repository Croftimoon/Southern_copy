<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_delivery_lead_time_tree" model="ir.ui.view">
        <field name="name">delivery.lead.time.tree</field>
        <field name="model">delivery.lead.time</field>
        <field name="arch" type="xml">
            <tree string="Delivery Lead Times">
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="start_postcode"/>
                <field name="end_postcode"/>
                <field name="lead_days"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_delivery_lead_time_form" model="ir.ui.view">
        <field name="name">delivery.lead.time.form</field>
        <field name="model">delivery.lead.time</field>
        <field name="arch" type="xml">
            <form string="Delivery Lead Time">
                <sheet>
                    <group>
                        <group>
                            <field name="country_id" options="{'no_create': True}"/>
                            <field name="state_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="start_postcode"/>
                            <field name="end_postcode"/>
                            <field name="lead_days"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <strong>Postcode Range:</strong> Leave both postcode fields blank to create a default rule for the country/state combination.
                        For specific postcode ranges, both start and end postcodes must be filled.
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_delivery_lead_time_search" model="ir.ui.view">
        <field name="name">delivery.lead.time.search</field>
        <field name="model">delivery.lead.time</field>
        <field name="arch" type="xml">
            <search string="Search Delivery Lead Times">
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="start_postcode"/>
                <field name="end_postcode"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_delivery_lead_time" model="ir.actions.act_window">
        <field name="name">Delivery Lead Times</field>
        <field name="res_model">delivery.lead.time</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first delivery lead time rule!
            </p>
            <p>
                Define delivery lead times based on geographic locations and postcode ranges.
                These rules will be used to automatically calculate delivery dates for sales orders.
            </p>
        </field>
    </record>

    <!-- Menu Item - Under Configuration, Sales Administrator only -->
    <menuitem
        id="menu_delivery_lead_time"
        name="Delivery Lead Times"
        parent="sale.menu_sale_config"
        action="action_delivery_lead_time"
        sequence="50"
        groups="sales_team.group_sale_manager"/>

</odoo>