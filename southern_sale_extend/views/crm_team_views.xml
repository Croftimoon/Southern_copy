<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_team_view_form_inherit" model="ir.ui.view">
        <field name="name">crm.team.view.form.inherit</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="country_id"/>
                <field name="state_id" domain="[('country_id', '=', country_id)]"/>
            </xpath>
            <xpath expr="//page[@name='members_users']" position="after">
                <page string="Postcodes" name="postcodes">
                    <field name="postcode_ids">
                        <tree editable="bottom">
                            <field name="start_postcode"/>
                            <field name="end_postcode"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="crm_team_postcode_view_form" model="ir.ui.view">
        <field name="name">crm.team.postcode.view.form</field>
        <field name="model">crm.team.postcode</field>
        <field name="arch" type="xml">
            <form string="Sales Team Postcode">
                <sheet>
                    <group>
                        <field name="team_id"/>
                        <field name="start_postcode"/>
                        <field name="end_postcode"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>