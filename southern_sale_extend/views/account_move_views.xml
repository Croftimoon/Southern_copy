<odoo>
    <record id="account_move_form_inherit_add_client_id" model="ir.ui.view">
        <field name="name">account.move.form.inherit.client.id</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']/ancestor::div[1]" position="after">
                <field name="client_id" invisible="sale_order_count == 0" readonly="state != 'draft'"/>
            </xpath>
            <xpath expr="//label[@for='partner_id']" position="attributes">
                <attribute name="string">Practice</attribute>
            </xpath>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="patient_name" invisible="sale_order_count == 0"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="surgery_date" invisible="sale_order_count == 0"/>
            </xpath>
        </field>
    </record>
    <record id="account_move_tree_inherit_add_client_id" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.client.id</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="before">
                <field name="client_id" column_invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund', 'out_receipt')" string="Client"/>
                <field name="patient_name" column_invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund', 'out_receipt')" string="Patient"/>
            </xpath>
        </field>
    </record>
    <record id="account_move_search_inherit_add_client_id" model="ir.ui.view">
        <field name="name">account.move.search.inherit.client.id</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="client_id"/>
                <field name="patient_name"/>
            </xpath>
        </field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Sales Team Member" name="group_by_team_member" context="{'group_by': 'sales_team_member'}"/>
            </xpath>
        </field>
    </record>
</odoo>