<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="product_consignment_report_form" model="ir.ui.view">
            <field name="name">product.consignment.report.form</field>
            <field name="model">product.consignment.report</field>
            <field name="arch" type="xml">
                <form string="Product Analysis Report">
                    <sheet string="Product Analysis">
                        <group expand="0" string="Filters">
                            <group expand="0" string="Choose dates to calculate sales">
                                <field name="start_date" required="True" />
                                <field name="end_date" required="True" />
                            </group>
                            <group expand="0"></group>
                        </group>
                        <group expand="0" >
                            <group expand="0" string="Products &#038; Categories">
                                <field name="product_category_ids" widget="many2many_tags"
                                       options="{'no_create': True}"/>
                                <field name="product_ids" widget="many2many_tags"
                                       domain="[('property_is_consignment_product', '=', True), ('id','in',products_ids)]"
                                       options="{'no_create': True}" required="1"/>
                                <field name="products_ids" invisible="1"/>
                            </group>
                            <group expand="0" string="Companies &#038; Warehouses">
                                <field name="company_ids" widget="many2many_tags"
                                       domain="[('id', 'in', allowed_company_ids)]"
                                       options="{'no_create': True}"/>
                                <field name="consignee_ids" widget="many2many_tags"
                                       domain="[('property_is_consignment_customer', '=', True)]"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>

                    <footer>
                        <button name="view_product_report" string="View Data" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_report_all" model="ir.actions.act_window">
            <field name="name">Product Reports</field>
            <field name="res_model">product.consignment.report</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
