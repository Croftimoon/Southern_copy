<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="setu_consignment_ledger_report_form" model="ir.ui.view">
            <field name="name">setu.consignment.ledger.report.form</field>
            <field name="model">setu.consignment.ledger.report</field>
            <field name="arch" type="xml">
                <form string="Consignment Ledger Report">
                    <sheet string="Consignment Ledger">
                        <group>
                            <group string="Choose dates to calculate ledger">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group></group>
                        </group>
                        <group>
                            <group string="Products &#038; Categories">
                                <field name="product_category_ids" widget="many2many_tags"
                                       options="{'no_create': True, 'no_open': True}"/>
                                <field name="product_ids" widget="many2many_tags"
                                       options="{'no_create': True, 'no_open': True}"
                                       domain="[('property_is_consignment_product', '=', True)]"/>
                            </group>
                            <group string="Companies &#038; Warehouses">
                                <field name="company_ids" widget="many2many_tags"
                                       domain="[('id', 'in', allowed_company_ids)]"
                                       options="{'no_create': True, 'no_open': True}"/>
                                <field name="consignee_ids" widget="many2many_tags" domain="[('property_is_consignment_customer', '=', True)]"
                                       options="{'no_create': True, 'no_open': True}" />
                            </group>
                        </group>
                        <footer>
                            <button name="download_report_in_listview" string="View Data" type="object"
                                    class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
