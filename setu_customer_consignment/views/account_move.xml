<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="consignment_move_form" model="ir.ui.view">
            <field name="name">consignment.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[2]/field[@name='currency_id']" position="after">
                        <field name="property_is_consignment_invoice" readonly = "1"/>
                </xpath>
            </field>
        </record>

        <record id="consignment_development_invoice_action" model="ir.actions.act_window">
            <field name="name">Consignment Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_is_consignment_invoice','=', True)]</field>
            <field name="context">{'create':False, 'property_is_consignment_invoice':True}</field>
        </record>
    </data>
</odoo>