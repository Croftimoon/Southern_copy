<odoo>
  <record id="view_order_form_inherit_add_lot_id" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.add.lot.id</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']//tree/field[@name='product_uom_qty']" position="before">
        <field name="order_warehouse_id" invisible="True" column_invisible="True"/>
        <field name="lots_visible" invisible="True" column_invisible="True"/>
        <field name="location_id"/>
        <field name="lot_id" invisible="not lots_visible"/>
        <field name="replenish_stock" invisible="not parent.property_is_consignment_order" column_invisible="not parent.property_is_consignment_order"/>
      </xpath>
      <xpath expr="//field[@name='order_line']" position="before">
        <field name="property_is_consignment_order" invisible="True"/>
      </xpath>
    </field>
  </record>
  <record id="view_consignment_order_form_inherit_add_lot_id" model="ir.ui.view">
    <field name="name">sale.order.consignment.form.inherit.add.lot.id</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="setu_customer_consignment.view_order_consignment_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']//tree/field[@name='product_uom_qty']" position="before">
        <field name="order_warehouse_id" invisible="True" column_invisible="True"/>
        <field name="lots_visible" invisible="True" column_invisible="True"/>
        <field name="location_id"/>
        <field name="lot_id" invisible="not lots_visible"/>
        <field name="replenish_stock" invisible="not parent.property_is_consignment_order" column_invisible="not parent.property_is_consignment_order"/>
      </xpath>
      <xpath expr="//field[@name='order_line']" position="before">
        <field name="property_is_consignment_order" invisible="True"/>
      </xpath>
      <field name="partner_id" position='after'>
        <field name="delivery_set" invisible="1"/>
        <field name="is_all_service" invisible="1"/>
        <field name="recompute_delivery_price" invisible="1"/>
      </field>
      <xpath expr="//field[@name='order_line']" position="after">
        <div class="float-end d-flex gap-1 mb-2 ms-1" name="so_button_below_order_lines">
          <button
                  string="Add shipping"
                  name="action_open_delivery_wizard"
                  type="object"
                  invisible="is_all_service or not order_line or delivery_set"/>
          <button
                  string="Update shipping cost"
                  name="action_open_delivery_wizard"
                  context="{'carrier_recompute':True}"
                  type="object"
                  class="text-warning btn-secondary"
                  invisible="is_all_service or not recompute_delivery_price or not delivery_set"/>
          <button
                  string="Update shipping cost"
                  name="action_open_delivery_wizard"
                  context="{'carrier_recompute':True}"
                  type="object"
                  invisible="is_all_service or recompute_delivery_price or not delivery_set"/>
        </div>
      </xpath>
      <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="before">
        <field name="recompute_delivery_price" invisible="1"/>
        <field name="is_delivery" invisible="1"/>
      </xpath>
      <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
        <field name="recompute_delivery_price" column_invisible="True"/>
        <field name="is_delivery" column_invisible="True"/>
      </xpath>
      <xpath expr="//field[@name='order_line']/tree" position="attributes">
        <attribute name="decoration-warning">recompute_delivery_price and is_delivery</attribute>
      </xpath>
      <label for="commitment_date" position="before">
        <field name="shipping_weight" readonly="True"/>
      </label>
    </field>
  </record>
</odoo>