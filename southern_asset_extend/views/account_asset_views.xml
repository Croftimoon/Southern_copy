<odoo>
  <record id="view_account_asset_form_inherit_custom" model="ir.ui.view">
    <field name="name">account.asset.form.inherit.custom</field>
    <field name="model">account.asset</field>
    <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='already_depreciated_amount_import']/ancestor::group[1]" position="after">
        <group string="Asset Assignment">
          <field name="employee_id"/>
        </group>
      </xpath>
      <xpath expr="//field[@name='model_id']" position="after">
        <field name="serial_numbers"/>
      </xpath>
    </field>
  </record>
  <record id="view_account_asset_tree_inherit_employee_name" model="ir.ui.view">
    <field name="name">account.asset.tree.inherit.employee.name</field>
    <field name="model">account.asset</field>
    <field name="inherit_id" ref="account_asset.view_account_asset_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="after">
        <field name="serial_numbers" optional="hide"/>
        <field name="employee_name" optional="show"/>
      </xpath>
    </field>
  </record>
  <record id="view_account_asset_search_inherit_employee_name" model="ir.ui.view">
    <field name="name">account.asset.search.inherit.employee.name</field>
    <field name="model">account.asset</field>
    <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
    <field name="arch" type="xml">
      <xpath expr="//search" position="inside">
        <field name="employee_id"/>
        <field name="serial_numbers"/>
      </xpath>
    </field>
  </record>
</odoo>